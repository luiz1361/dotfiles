# Use the server-provided last modification date, if available
# Default: off
timestamping = on

# Do not ascend to parent directories when downloading recursively
# Default: off
no_parent = on

# This limits how long wget waits for DNS resolution before giving up (in seconds)
# Default: no timeout
dns_timeout = 60

# This specifies the maximum time to establish a connection to the server (in seconds)
# Default: no timeout
connect_timeout = 60

# This sets the timeout for reading data from the server after connection (in seconds)
# Default: 900
read_timeout = 60

# Number of retry attempts if download fails
# Default: 20
tries = 3

# Retry even when the connection is refused
# Default: off
retry_connrefused = on

# Use the last component of a redirection URL for the local file name
# Default: off
trust_server_names = on

# Follow FTP links in HTML documents
# Default: off
follow_ftp = on

# Automatically append proper extensions to files based on MIME type
# Default: off
adjust_extension = on

# Ignore `robots.txt` rules
# Default: on
robots = off

# Print server responses (HTTP/FTP)
# Default: off
server_response = on

# Disguise as Google Chrome on macOS
# Default: Wget/version
# This user agent mimics Chrome 124 on macOS 13+
user_agent = Mozilla/5.0 (Macintosh; Intel Mac OS X 13_4) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/124.0.0.0 Safari/537.36

# Wait between requests to avoid hammering the server (in seconds)
# Default: 0
wait = 2

# Randomize wait to make request intervals less predictable
# Default: off
random_wait = on

# Continue partially downloaded files
# Default: off
continue = on

# Enable verbose output for debugging
# Default: off
verbose = on

# Enable recursive downloads
# Default: off
recursive = on

# Limit recursion depth (0 = infinite)
# Default: 5
level = 5
